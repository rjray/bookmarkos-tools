#!/usr/bin/env bash

cd "$HOME/Dropbox/Apps/Bookmark OS"

# Do we have Linuxbrew set up?
if [ -d /home/linuxbrew/.linuxbrew ]; then
    eval $(/home/linuxbrew/.linuxbrew/bin/brew shellenv)
fi

date=$(date +"%Y%m%d")
html="bookmarks-$date.html.gz"
json="bookmarks-$date.json.gz"

gzip -c -9 backup.html > $html && bookmarks2json --input $html --output $json

bookmarks_report weekly $json | \
  mailx -s "Weekly Bookmarks Report" rjray@blackperl.com
